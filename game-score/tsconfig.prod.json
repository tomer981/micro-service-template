{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "baseUrl": "./",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "useUnknownInCatchVariables": false,
    "sourceMap": false,
    "removeComments": true,
    "rootDir": "./"
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "spec",
    "src/public/",
    "scripts",
    "eslint.config.ts"
  ]
}
